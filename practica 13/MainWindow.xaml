<Window x:Class="practica_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
<StackPanel>
    <Label x:Name="QuestionLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
    <StackPanel x:Name="AnswersStackPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical"/>
    <Button x:Name="NextButton" Content="Next" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,10,10" Click="NextButton_Click"/>
</StackPanel>
 
    </Grid>
</Window>
